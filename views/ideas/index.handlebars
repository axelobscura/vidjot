{{#each ideas}}
    <div class="card card-body mb-2">
        <h4>{{title}}</h4>
        <p>{{details}}</p>
        <a class="btn btn-dark btn-blog" href="/ideas/edit/{{id}}">EDIT</a>
        <form action="/ideas/{{id}}?_method=DELETE" method="post">
            <input type="hidden" name="_method" value="DELETE">
            <input type="submit" class="btn btn-danger btn-block mt-3" value="DELETE">
        </form>
    </div>
{{else}}
    <p>No Video ideas</p>
{{/each}}